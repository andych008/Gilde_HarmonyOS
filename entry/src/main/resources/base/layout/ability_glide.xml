<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:padding="32vp"
    ohos:background_element="#ffffff"
    ohos:alignment="horizontal_center">
    <ScrollView
        ohos:height="match_content"
        ohos:width="match_parent">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical"
            ohos:alignment="horizontal_center">
            <Button
                ohos:id="$+id:btn1"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="25fp"
                ohos:background_element="#FF51A8DD"
                ohos:padding="10vp"
                ohos:text="网络图片string"/>
            <Button
                ohos:id="$+id:btn2"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="20vp"
                ohos:text_size="25fp"
                ohos:background_element="#FF51A8DD"
                ohos:padding="10vp"
                ohos:text="相册图片uri"/>
            <Button
                ohos:id="$+id:btn3"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="20vp"
                ohos:text_size="25fp"
                ohos:background_element="#FF51A8DD"
                ohos:padding="10vp"
                ohos:text="本地图片file"/>

            <Button
                ohos:id="$+id:btn4"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="20vp"
                ohos:text_size="25fp"
                ohos:background_element="#FF51A8DD"
                ohos:padding="10vp"
                ohos:text="base64图片string"/>
            <Button
                ohos:id="$+id:btn5"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="20vp"
                ohos:text_size="25fp"
                ohos:background_element="#FF51A8DD"
                ohos:padding="10vp"
                ohos:text="本地图片uri"/>
            <Button
                ohos:id="$+id:btn6"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="20vp"
                ohos:text_size="25fp"
                ohos:background_element="#FF51A8DD"
                ohos:padding="10vp"
                ohos:text="rawfile图片"/>
        </DirectionalLayout>


    </ScrollView>

    <Image
        ohos:weight="1"
        ohos:id="$+id:image"
        ohos:min_height="200vp"
        ohos:height="200vp"
        ohos:width="200vp"/>

</DirectionalLayout>